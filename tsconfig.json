{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["es7", "es6", "dom"],
        "outDir": "./build",
        "paths": {
            "*": ["./src/shared/types/*"]
        }
    },
    "include":[
        "./src/**/*",
        "./tests/*",
        "./index.ts"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
        "./tests/*.d.ts"
    ]
}